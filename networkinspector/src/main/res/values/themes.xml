        <item name="colorPrimary">@color/ni_accent</item>
        <item name="colorPrimaryVariant">@color/ni_accent_variant</item>
        <item name="colorOnPrimary">@color/ni_text_primary</item>
        <item name="colorSecondary">@color/ni_accent_variant</item>
