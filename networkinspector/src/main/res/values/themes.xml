        <item name="colorOnSecondary">@color/ni_text_primary</item>
        <item name="android:colorBackground">@color/ni_background</item>
        <item name="colorSurface">@color/ni_surface</item>
        <item name="colorOnSurface">@color/ni_text_primary</item>
        <item name="colorError">@color/ni_error</item>
