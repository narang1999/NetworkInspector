<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/ni_background">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/ni_surface"
        app:titleTextColor="@color/ni_text_primary"
        app:subtitleTextColor="@color/ni_text_secondary"
        app:navigationIconTint="@color/ni_text_primary" />

    <!-- Request Header Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/ni_surface">

        <!-- Method and Status Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ni_accent"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="POST" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textColor="@color/ni_success"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="âœ“ 200" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ni_text_secondary"
                android:textSize="12sp"
                tools:text="234ms" />

        </LinearLayout>

        <!-- URL -->
        <TextView
            android:id="@+id/tvUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/ni_text_primary"
            android:textSize="12sp"
            android:textIsSelectable="true"
            tools:text="https://api.example.com/v1/users/profile" />

        <!-- Timestamp -->
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/ni_text_secondary"
            android:textSize="11sp"
            tools:text="Jan 15, 2024 14:32:15.234" />

    </LinearLayout>

    <!-- Tabs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/ni_surface_variant">

        <TextView
            android:id="@+id/tabOverview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="12dp"
            android:text="OVERVIEW"
            android:textColor="@color/ni_text_primary"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="?attr/selectableItemBackground" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/ni_divider" />

        <TextView
            android:id="@+id/tabRequest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="12dp"
            android:text="REQUEST"
            android:textColor="@color/ni_text_primary"
            android:textSize="12sp"
            android:alpha="0.5"
            android:background="?attr/selectableItemBackground" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/ni_divider" />

        <TextView
            android:id="@+id/tabResponse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="12dp"
            android:text="RESPONSE"
            android:textColor="@color/ni_text_primary"
            android:textSize="12sp"
            android:alpha="0.5"
            android:background="?attr/selectableItemBackground" />

    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textColor="@color/ni_text_primary"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:textIsSelectable="true"
            android:lineSpacingExtra="2dp" />

    </ScrollView>

</LinearLayout>



