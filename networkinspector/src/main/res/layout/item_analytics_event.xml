<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/tvSource"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="9sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingVertical="2dp"
        tools:text="FIREBASE" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/tvEventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ni_text_primary"
            android:textSize="13sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="screen_view" />

        <TextView
            android:id="@+id/tvParamsPreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ni_text_secondary"
            android:textSize="11sp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="page_name=home, category=eyeglasses" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ni_text_secondary"
            android:textSize="11sp"
            tools:text="14:32:05" />

        <TextView
            android:id="@+id/tvParamsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ni_text_secondary"
            android:textSize="10sp"
            android:layout_marginTop="2dp"
            tools:text="12 params" />

    </LinearLayout>

</LinearLayout>

